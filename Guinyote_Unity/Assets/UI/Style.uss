
/* Ocultar el tab header */
.unity-tab__header {
    display: none;
}


.unity-button {
    border-radius: 10px;
    padding: 10px;
}

.ventana {
    background-color: #ADD8E6;
    border-radius: 10px;
    padding: 20px;
    margin: 10px;
}


.ventana_derecha {
    position: absolute;
    right: 0px;
    top: 0px;
    bottom: 0px;
    left: auto;
    height: 100%;
    border-radius: 10px;
}

